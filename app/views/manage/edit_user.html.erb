<title>Event Handler</title>
<link href="style.css" rel="stylesheet" type="text/css" media="screen" />
<%= stylesheet_link_tag "valid" %>
<%= stylesheet_link_tag "style" %>
<%= javascript_include_tag :defaults %>
<%= stylesheet_link_tag "calander" %>
<%= calendar_date_select_includes 'red'%>
 <% require 'date' %>
</head>
<body>
<div id="wrapper">
	<div id="logo">
          <h1>Event Handler</h1>
	</div>
	<div id="menu">
		<ul>
			<li class="current_page_item"><span><%= link_to "Home",home_manage_path %></span></li>
			<li><%= link_to "Users",users_manage_path %> </li>
			<li><%= link_to "Events",event_manage_path %></li>
			<li><%= link_to "Cofig" %></li>
                        <li><%= link_to "About" %></li>
		</ul>
	</div>
	<!-- end #menu -->
	<div id="header">
      <div id="search">
        <h3>Welcome <%= session[:name]%>|<%= link_to "Signout",logout_account_url %>  </h3>
        </div>
        </div>
	<!-- end #header -->
	<div id="page">
		<div id="page-bgtop">
			<div id="page-bgbtm">
				<div id="content">
					<div class="post">
                                          <% form_tag(:action=>"update_event",:method=>"get",:id=>@employee1.id) do %>
                                           <%= error_messages_for :employee %>
                                          <table>
                                            <tr>
                                              <th>FirstName :</th><td><%=text_field :employee1, :fname  %> </td>
                                            </tr>
                                            <tr>
                                              <th>LastName :</th><td><%=text_field :employee1, :lname  %> </td>
                                            </tr>
                                            <tr>
                                              <th>Email :</th><td><%=text_field :employee1, :email  %> </td>
                                            </tr>
                                            <tr>
                                              <th></th><td><input type="submit" value="Change" /></td>
                                            </tr>
                                          </table>
                                          <%end   %>
					</div>
				</div>
				<!-- end #content -->
				<div id="sidebar">
                                <%= calendar_date_select_tag "e_date_and_time", nil, :embedded => true, :time => true %>
				</div>
				<!-- end #sidebar -->
				<div style="clear: both;">&nbsp;</div>
			</div>
		</div>
	</div>
	<!-- end #page -->
</div>

<div id="footer">
